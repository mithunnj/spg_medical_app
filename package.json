{
  "name": "carebridge-medical-platform",
  "version": "1.0.0",
  "description": "A trusted bridge between intensive care and outpatient medicine, with a transparent family portal",
  "private": true,
  "keywords": [
    "medical",
    "healthcare",
    "patient-care",
    "hospital",
    "clinic",
    "bridge",
    "care-coordination",
    "pediatric",
    "HIPAA-compliant"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns=\"components|lib\"",
    "test:integration": "jest --testPathPatterns=integration",
    "test:guardian": "jest --testPathPatterns=guardian",
    "test:patient": "jest --testPathPatterns=patient",
    "test:components": "jest --testPathPatterns=components",
    "test:lib": "jest --testPathPatterns=lib",
    "test:responsive": "jest --testPathPatterns=\"ResponsiveUI|DashboardLayout\"",
    "test:ui": "jest --testPathPatterns=\"components|ResponsiveUI|DashboardLayout\"",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:responsive"
  },
  "prisma": {
