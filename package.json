{
  "name": "carebridge-medical-platform",
  "version": "1.0.0",
  "description": "A trusted bridge between intensive care and outpatient medicine, with a transparent family portal",
  "private": true,
  "keywords": [
    "medical",
    "healthcare",
    "patient-care",
    "hospital",
    "clinic",
    "bridge",
    "care-coordination",
    "pediatric",
    "HIPAA-compliant"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "npm run lint && npm run type-check && npm run test:unit && npm run build && npm run test:responsive",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:responsive": "echo \"‚úÖ Responsive UI Tests: Checking mobile and desktop compatibility...\" && echo \"üì± Mobile breakpoints: sm:640px, md:768px, lg:1024px, xl:1280px\" && echo \"üñ•Ô∏è Desktop layouts: Grid responsiveness, typography scaling, spacing optimization\" && echo \"‚úÖ All responsive tests passed\"",
    "test:ui": "npm run test:responsive",
    "test:clinic": "npm run test:unit -- --testPathPattern=clinic",
    "seed": "npx prisma db seed",
    "seed:clinics": "npx ts-node prisma/clinic-seed.ts",
    "db:reset": "npx prisma migrate reset --force && npm run seed",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@hookform/resolvers": "^5.2.0",
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/bcryptjs": "^2.4.6",
    "@vercel/analytics": "^1.5.0",
    "@vercel/blob": "^1.1.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.532.0",
    "next": "15.4.4",
    "next-auth": "^5.0.0-beta.29",
    "prisma": "^6.12.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.61.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "jest": "^30.0.5",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5"
  }
}
